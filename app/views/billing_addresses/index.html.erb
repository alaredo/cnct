<h1>Listing billing_addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Number</th>
      <th>Complement</th>
      <th>Quarter</th>
      <th>Reference</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billing_addresses.each do |billing_address| %>
      <tr>
        <td><%= billing_address.address %></td>
        <td><%= billing_address.number %></td>
        <td><%= billing_address.complement %></td>
        <td><%= billing_address.quarter %></td>
        <td><%= billing_address.reference %></td>
        <td><%= billing_address.city %></td>
        <td><%= billing_address.state %></td>
        <td><%= billing_address.country_id %></td>
        <td><%= billing_address.zip_code %></td>
        <td><%= link_to 'Show', billing_address %></td>
        <td><%= link_to 'Edit', edit_billing_address_path(billing_address) %></td>
        <td><%= link_to 'Destroy', billing_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Billing address', new_billing_address_path %>
