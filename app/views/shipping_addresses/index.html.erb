<h1>Listing shipping_addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Number</th>
      <th>Complement</th>
      <th>Quarter</th>
      <th>Reference</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zip code</th>
      <th>Recipient name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.address %></td>
        <td><%= shipping_address.number %></td>
        <td><%= shipping_address.complement %></td>
        <td><%= shipping_address.quarter %></td>
        <td><%= shipping_address.reference %></td>
        <td><%= shipping_address.city %></td>
        <td><%= shipping_address.state %></td>
        <td><%= shipping_address.country_id %></td>
        <td><%= shipping_address.zip_code %></td>
        <td><%= shipping_address.recipient_name %></td>
        <td><%= link_to 'Show', shipping_address %></td>
        <td><%= link_to 'Edit', edit_shipping_address_path(shipping_address) %></td>
        <td><%= link_to 'Destroy', shipping_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

